@model Dan3.Models.Loaisp

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/AdminCP/Views/Shared/_Layout.cshtml";
}


<div class="col-11 col-s-12 content">
    <div class="col-4 col-s-12 content">
        <div class="tabcontent">
            <div class="title">
                <i class="fas fa-barcode"></i> Sửa thông tin danh mục
                <hr>
            </div>
            <div class="row">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <form>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.loai_id)
                    <div class="form-group">
                        <div class="col-12 col-s-12 padding-box">
                            <label for="txtright">Tên loại sản phẩm:</label>
                        </div>
                        <div class="col-10 col-s-12 padding-box">
                            @Html.EditorFor(model => model.loai_name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.loai_name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-12 col-s-12 padding-box">
                            <label for="txtright">Tên danh mục:</label>
                        </div>
                        <div class="col-md-10">
                            @Html.DropDownList("danhmuc_id", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.danhmuc_id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-12 col-s-12 padding-box">
                        <div class="col-md-offset-4 col-md-5">
                            <input type="submit" value="Lưu" class="btn-form" />
                        </div>
                    </div>
                </form>



                }


            </div>
        </div>
    </div>
    @Html.Action("ht")
</div>



