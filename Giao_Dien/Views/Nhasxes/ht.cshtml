
@model IEnumerable<Dan3.Models.Nhasx>
@{ int i = 1;}
<div class="col-8 col-s-12 content">
    <div class="tabcontent">
        <div class="title">
            <i class="fas fas fa-boxes"></i> Danh sách nhà xuất bản

            <hr>
        </div>

        <div class="row">
            <div class="col-12 col-s-12 padding-box">
                <table class="" id="dataTable">
                    <thead>

                        <tr>
                            <th>Mã nhà xuất bản </th>

                            <th>Tên nhà xuất bản</th>
                            <th>Địa chỉ</th>
                            <th>Số điện thoại</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.nsx_id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nsx_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dichi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.sdt)
                            </td>
                            <td>
                                @Html.ActionLink(" ", "Edit", new { id = item.nsx_id }, new { @Class = "btn btn-warning fa fa-pencil" })
                                
                                @Html.ActionLink(" ", "Delete", new { id = item.nsx_id }, new { @Class = "btn btn-danger fa fa-trash", @Onclick = "return confirm('Bạn có muốn xóa không?')" })
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>