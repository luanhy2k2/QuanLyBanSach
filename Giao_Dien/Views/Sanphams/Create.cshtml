@model Dan3.Models.Sanpham

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AdminCP/Views/Shared/_Layout.cshtml";
}

<div class="col-12 col-s-12 content">
    <div class="col-12 col-s-12 content">
        <div class="tabcontent">
            <div class="title">
                <i class="fas fa-barcode"></i> Nhập thông tin sách
                <hr>
            </div>
            <div class="row">

                @using (Html.BeginForm("Create", "Sanphams", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                <form>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-12 col-s-12 padding-box">
                            <label for="txtright">Tên sách:</label>
                        </div>
                        <div class="col-md-5">
                            @Html.EditorFor(model => model.sanp_name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.sanp_name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-12 col-s-12 padding-box">
                            <label for="txtright">Kích thước:</label>
                        </div>
                        <div class="col-md-2">
                            @Html.EditorFor(model => model.Size, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Size, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-12 col-s-12 padding-box">
                            <label for="txtright">Tên tác giả:</label>
                        </div>
                        <div class="col-md-3">
                            @Html.DropDownList("TG_id", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TG_id, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-12 col-s-12 padding-box">
                            <label for="txtright">Loại sách:</label>
                        </div>
                        <div class="col-md-3">
                            @Html.DropDownList("loai_id", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.loai_id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-12 col-s-12 padding-box">
                            <label for="txtright">Nội dung:</label>
                        </div>
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.tomtat, new { htmlAttributes = new { @class = "form-control" }, id = "txtContent" })
                            @Html.ValidationMessageFor(model => model.tomtat, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-12 col-s-12 padding-box">
                            <label for="txtright">Tên nhà xuất bản:</label>
                        </div>
                        <div class="col-md-3">
                            @Html.DropDownList("nsx_id", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.nsx_id, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-12 col-s-12 padding-box">
                            <label for="txtright">Số trang:</label>
                        </div>
                        <div class="col-md-2">
                            @Html.EditorFor(model => model.sotrang, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.sotrang, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-12 col-s-12 padding-box">
                            <label for="txtright">Ngày sản xuất:</label>
                        </div>
                        <div class="col-md-2">
                            @Html.EditorFor(model => model.namsx, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.namsx, "", new { @class = "text-danger" })
                        </div>
                    </div>

