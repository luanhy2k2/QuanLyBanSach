@model IEnumerable<Dan3.Models.Sanpham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminCP/Views/Shared/_Layout.cshtml";
    int i = 1;
}


<div class="col-12 col-s-12 content">
    <div class="col-8 col-s-12 content">
        <div class="tabcontent">
            <div class="title">
                <i class="fas fa-users"></i> Danh sách tác phẩm

                <hr>
                <p>
                    @Html.ActionLink("Thêm tác phẩm", "Create", null, new { @Class = "btn btn-success fa fa-plus" })
                </p>
            </div>
        </div>
    </div>
    <table class="table table-bordered table-striped" id="dataTable">
        <thead>

            <tr>
                <th>Số thứ tự</th>
                <th>
                    Tên tác phẩm
                </th>
                <th>Kích thước </th>
                <th>Tác giả </th>
                <th>Thể loại</th>
                <th>Nhà sản xuất</th>
                <th>Số trang</th>
                <th>Tóm tắt nội dung</th>
                <th>Ngày sản xuất</th>
                <th>Hình ảnh</th>
                <th>Giá cả</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(i++)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sanp_name)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Size)</td>
                    <td>@Html.DisplayFor(modelItem => item.TG.TG_name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Loaisp.loai_name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nhasx.nsx_name)</td>
                    <td>@Html.DisplayFor(modelItem => item.sotrang)</td>
                    <td>@Html.DisplayFor(modelItem => item.tomtat)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.namsx)
                    </td>
                    <td>
                        <img src="@item.Image" style="width:100px" />

                    </td>
                    <td>@Html.DisplayFor(modelItem => item.price)</td>
                    <td>
                        @Html.ActionLink(" ", "Edit", new { id = item.sanp_id }, new { @Class = "btn btn-warning fa fa-pencil" }) |
                        @Html.ActionLink(" ", "Details", new { id = item.sanp_id }, new { @Class = "btn btn-info fa fa-eye" }) |
                        @Html.ActionLink(" ", "Delete", new { id = item.sanp_id }, new { @Class = "btn btn-danger fa fa-trash", @Onclick = "return confirm('Bạn có muốn xóa không?')" }) |
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
    @section scripts
{
        <!-- Page level plugins -->
        <script src="~/Assets/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
        <script src="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

        <!-- Page level custom scripts -->
        <script src="~/Assets/Admin/js/demo/datatables-demo.js"></script>
    }
