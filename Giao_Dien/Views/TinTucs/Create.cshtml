@model Dan3.Models.TinTuc

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AdminCP/Views/Shared/_Layout.cshtml";
}


<div class="col-11 col-s-12 content">
    <div class="col-4 col-s-12 content">
        <div class="tabcontent">
            <div class="title">
                <i class="fas fa-barcode"></i> Nhập thông tin tin tức
                <hr>
            </div>
            <div class="row">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <form>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-12 col-s-12 padding-box">
                                <label for="txtright">Tên tin tức:</label>
                            </div>
                            <div class="col-10 col-s-12 padding-box">
                                @Html.EditorFor(model => model.Tintuc_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Tintuc_name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-12 col-s-12 padding-box">
                                <label for="txtright">Nội dung:</label>
                            </div>
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" }, id = "txtContent" })
                                @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-12 col-s-12 padding-box">
                            <div class="col-md-offset-4 col-md-5">
                                <input type="submit" value="Thêm danh mục" class="btn-form" />
                            </div>
                        </div>
                    </form>



                }


            </div>
        </div>
    </div>
    @Html.Action("ht")
</div>
@section scripts
{
    <!-- Page level plugins -->
    <script src="~/Assets/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script>
        var editor = CKEDITOR.replace('txtContent', { customConfig: '~/Assets/Admin/js/ckfeditor/config.js', });
    </script>
    <!-- Page level custom scripts -->
    <script src="~/Assets/Admin/js/demo/datatables-demo.js"></script>
}