

<div class="col-11 col-s-12 content">
    <div class="col-4 col-s-12 content">
        <div class="tabcontent">
            <div class="title">
                <i class="fas fa-barcode"></i> Nhập thông tin danh mục
                <hr>
            </div>
            <div class="row">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <form>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-12 col-s-12 padding-box">
                                <label for="txtright">Tên danh mục:</label>
                            </div>
                            <div class="col-10 col-s-12 padding-box">
                                @Html.EditorFor(model => model.danhmuc_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.danhmuc_name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-12 col-s-12 padding-box">
                            <div class="col-md-offset-4 col-md-5">
                                <input type="submit" value="Thêm danh mục" class="btn-form" />
                            </div>
                        </div>
                    </form>



                }


            </div>
        </div>
    </div>
    @Html.Action("ht")
</div>
@section scripts
{
    <!-- Page level plugins -->
    <script src="~/Assets/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Assets/Admin/js/demo/datatables-demo.js"></script>
}