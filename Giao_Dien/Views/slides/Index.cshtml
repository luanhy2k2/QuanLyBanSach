@model IEnumerable<Dan3.Models.slide>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminCP/Views/Shared/_layoutadmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.image)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.slide_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.slide_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.slide_id })
        </td>
    </tr>
}

</table>
