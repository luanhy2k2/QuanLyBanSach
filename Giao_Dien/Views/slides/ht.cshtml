@model IEnumerable<Dan3.Models.slide>

<div class="col-8 col-s-12 content">
    <div class="tabcontent">
        <div class="title">
            <i class="fas fas fa-boxes"></i> Danh sách slide

            <hr>
        </div>

        <div class="row">
            <div class="col-12 col-s-12 padding-box">
                <table class="" id="dataTable">
                    <thead>

                        <tr>
                            <th>Mã slide</th>
                            <th>Hình ảnh</th>

                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.slide_id)</td>

                                <td>
                                    <img src="@item.image" style="width:100px" />

                                </td>

                                <td>
                                    @Html.ActionLink(" ", "Edit", new { id = item.slide_id }, new { @Class = "btn btn-warning fa fa-pencil" }) |
                                    @Html.ActionLink(" ", "Details", new { id = item.slide_id }, new { @Class = "btn btn-info fa fa-eye" }) |
                                    @Html.ActionLink(" ", "Delete", new { id = item.slide_id }, new { @Class = "btn btn-danger fa fa-trash", @Onclick = "return confirm('Bạn có muốn xóa không?')" }) |
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
           
        </div>
    </div>
</div>

